<div class="ui message">
    <i class="close icon"></i>
	<div class="header">title</div>
	<p>content</p>
</div>
<script type="text/javascript">
    $('.message .close')
        .on('click', function() {
            $(this).closest('.message').transition('fade');
        });
</script>
-----------------------------------------------
